<?xml version = '1.0' encoding = 'UTF-8'?>
<models>

	<model name="fire">
		<particlesystems>
			<particlesystem script="/global/particles/smoke" >
				<direction x="0" y="1" z="0" />
				<bindings>
					<binding emittervar="emission_rate" atlasattribute="status" />
					<binding emittervar="time_to_live" atlasattribute="status" />
				</bindings>
			</particlesystem>
		</particlesystems>
        <lights>
            <light type="point">
                 <diffusecolour r="0.8" g="0.7" b="0.25" />
                 <specularcolour r="0.8" g="0.7" b="0.25" />
                 <attenuation range="50" constant="0" linear="1" quadratic="0.01" />
                 <position x="0" y="0.1" z="0" />
            </light>
        </lights>
	</model>	

	<model name="sun">
		<submodels>
			<submodel mesh="3d_objects/primitives/models/sphere.mesh" >
				<parts>
					<part name="main" show="true" />
				</parts>
			</submodel>
		</submodels>
	</model>
	
</models>
